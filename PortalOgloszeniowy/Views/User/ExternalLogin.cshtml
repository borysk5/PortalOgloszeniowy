@model PortalOgloszeniowy.Models.LoginUser

@{
    ViewData["Title"] = "ExternalLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="form-signin text-center">
    <form asp-controller="User" asp-action="ExternalLoginConfirmation" method="post" class="form-signin">
        <img class="mb-4" src="https://example.com/logo.png" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">External Login</h1>

        <div class="form-floating">
            <input asp-for="UserName" class="form-control" id="floatingEmail" placeholder="Email" autofocus>
            <label asp-for="UserName">Email</label>
        </div>
        <span asp-validation-for="UserName" class="text-danger"></span>

        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" autocomplete="current-password">
            <label asp-for="Password">Password</label>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>

        <div class="checkbox mb-3">
            <label>
                <input asp-for="RememberMe"> Remember me
            </label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    </form>
</main>
