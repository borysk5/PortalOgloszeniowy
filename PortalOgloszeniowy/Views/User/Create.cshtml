@model PortalOgloszeniowy.Models.RegisterUser
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="form-signin text-center">
    <form method="post" asp-action="Create">
        <img class="mb-4" src="https://icdn.2cda.pl/obr/oryginalne/e20bba565a4aa5cb8a92808bbd444b9e.jpg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Okno Rejestracji</h1>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="Email" />
            <label asp-for="Email">Adres Email</label>
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>
        <div class="form-floating">
            <input asp-for="UserName" class="form-control" id="floatingUserName" placeholder="UserName" />
            <label asp-for="UserName">Nazwa Użytkownika</label>
        </div>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" />
            <label asp-for="Password">Hasło</label>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
        <div class="form-floating">
            <input asp-for="PhoneNumber" class="form-control" id="floatingPhoneNumber" placeholder="PhoneNumber" />
            <label asp-for="PhoneNumber">Numer Telefonu</label>
        </div>
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Zarejestruj się</button>
    </form>
</main>
<div class="text-danger" style="display:flex;justify-content:center;" asp-validation-summary="All"></div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}