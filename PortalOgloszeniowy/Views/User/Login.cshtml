@model PortalOgloszeniowy.Models.LoginUser
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="form-signin text-center">
    <form method="post" asp-action="Login">
        <img class="mb-4" src="https://icdn.2cda.pl/obr/oryginalne/e20bba565a4aa5cb8a92808bbd444b9e.jpg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Okno Logowania</h1>
        <div class="form-floating">
            <input asp-for="UserName" class="form-control" id="floatingUserName" placeholder="UserName"/>
            <label asp-for="UserName" for="floatingInput"></label>
        </div>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password"/>
            <label asp-for="Password" for="floatingPassword"></label>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input class="w-100 btn btn-lg btn-primary" type="submit" value="Zaloguj się" />
    </form>
    <a asp-action="Create">Zarejestruj się</a>
</main>
<div asp-validation-summary="All" class="text-danger" style="display:flex;justify-content:center;"></div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
