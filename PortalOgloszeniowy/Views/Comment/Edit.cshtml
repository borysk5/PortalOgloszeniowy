@model PortalOgloszeniowy.Models.Comment
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit - COMMENT</h1>
<div>
    <span>
        <a asp-action="Index" asp-controller="Comment" asp-route-id="@Model.Id">Powrót</a>
    </span>
</div>
<div asp-validation-summary="All"></div>
